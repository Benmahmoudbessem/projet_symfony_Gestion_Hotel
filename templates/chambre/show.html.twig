{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center text-primary mb-4" style="color: red;">Détails de la Chambre</h1>

        <!-- Détails de la chambre -->
        <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 800px; margin: auto;">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ chambre.id }}</td>
                </tr>
                <tr>
                    <th>Nb_lits</th>
                    <td>{{ chambre.nbLits }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ chambre.prix }}</td>
                </tr>
                <tr>
                    <th>Etage</th>
                    <td>{{ chambre.etage }}</td>
                </tr>
                <tr>
                    <th>Style</th>
                    <td>{{ chambre.style }}</td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ chambre.etat.value }}</td>
                </tr>
                <tr>
                    <th>Hotel</th>
                    <td>{{ chambre.hotel.nom }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Boutons -->
        <div class="text-center mt-4">
            <!-- Bouton pour retourner à la liste des chambres -->
            <a href="{{ path('app_chambre_index') }}" class="btn btn-primary"
               style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                Retour à la liste
            </a>

            <!-- Bouton pour modifier la chambre -->
            <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-warning"
               style="background-color: #ffc107; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                Modifier
            </a>
        </div>

        <!-- Formulaire de suppression -->
        <div class="text-center mt-4">
            {{ include('chambre/_delete_form.html.twig') }}
        </div>

    </div>

    {# Ajout des styles CSS spécifiques à cette page #}
    <style>
        /* Centrer le titre en rouge */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
        }

        /* Style pour la table */
        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table-bordered th {
            background-color: #007bff;
            color: white;
        }

        .table-bordered td {
            background-color: #ffffff;
        }

        /* Style pour les boutons */
        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-decoration: none;
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    </style>

{% endblock %}
