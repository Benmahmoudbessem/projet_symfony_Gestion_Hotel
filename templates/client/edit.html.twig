{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center" style="color: red; font-size: 2rem; margin-bottom: 30px;">Modifier le Client</h1>

        <!-- Formulaire de modification -->
        <div style="background-color: #ffffff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 600px; margin: auto;">
            <form method="post">
                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="client_name" style="font-weight: bold; font-size: 1.1rem;">Nom du client</label>
                    <input type="text" id="client_name" name="client[name]" class="form-control" placeholder="Entrez le nom du client" required>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="client_address" style="font-weight: bold; font-size: 1.1rem;">Adresse</label>
                    <input type="text" id="client_address" name="client[address]" class="form-control" placeholder="Entrez l'adresse du client" required>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="client_contact" style="font-weight: bold; font-size: 1.1rem;">Numéro de contact</label>
                    <input type="text" id="client_contact" name="client[contactNumber]" class="form-control" placeholder="Entrez le numéro de contact" required>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="client_email" style="font-weight: bold; font-size: 1.1rem;">Email</label>
                    <input type="email" id="client_email" name="client[email]" class="form-control" placeholder="Entrez l'email du client" required>
                </div>

                <div class="form-group text-center" style="margin-top: 30px;">
                    <button type="submit" class="btn btn-success" style="padding: 10px 20px; font-size: 1.1rem;">Mettre à jour</button>
                </div>
            </form>
        </div>

        <!-- Boutons supplémentaires -->
        <div class="text-center mt-4">
            <!-- Bouton retour à la liste des clients -->
            <a href="{{ path('app_client_index') }}" class="btn btn-primary"
               style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                Retour à la liste des clients
            </a>

            <!-- Formulaire de suppression avec espacement -->
            <div class="mt-3" style="margin-top: 20px;">
                {{ include('client/_delete_form.html.twig') }}
            </div>
        </div>

    </div>

    {# Styles spécifiques à cette page #}
    <style>
        /* Style pour les titres */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        /* Style du formulaire */
        .form-group {
            margin-bottom: 20px; /* Ajoute un espacement entre les champs */
        }

        label {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        /* Style pour les boutons */
        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-decoration: none;
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        /* Espacement entre les boutons */
        .mt-3 {
            margin-top: 20px; /* Ajoute de l'espace supplémentaire */
        }
    </style>

{% endblock %}
