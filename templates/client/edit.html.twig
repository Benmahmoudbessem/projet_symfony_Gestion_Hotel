{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center" style="color: red; font-size: 2rem; margin-bottom: 30px;">Modifier le Client</h1>

        <!-- Formulaire de modification -->
        <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 600px; margin: auto;">
            {{ include('client/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <!-- Boutons supplémentaires -->
        <div class="text-center mt-4">
            <!-- Bouton retour à la liste des clients -->
            <a href="{{ path('app_client_index') }}" class="btn btn-primary"
               style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                Retour à la liste des clients
            </a>

            <!-- Formulaire de suppression -->
            <div class="mt-3">
                {{ include('client/_delete_form.html.twig') }}
            </div>
        </div>

    </div>

    {# Styles spécifiques à cette page #}
    <style>
        /* Style pour les titres */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        /* Style du formulaire */
        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
        }

        /* Style des labels */
        label {
            font-size: 1.1rem;  /* Augmenter la taille de la police des labels */
            font-weight: bold;
            display: block;
            margin-bottom: 8px; /* Ajouter de l'espace sous les labels */
            color: #333; /* Une couleur sombre pour améliorer la lisibilité */
        }

        /* Style des champs du formulaire */
        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
            box-sizing: border-box;
        }

        /* Style pour les boutons */
        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-decoration: none;
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

    </style>

{% endblock %}
