{% extends 'base.html.twig' %}

{% block title %}Client List{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center" style="color: red; font-size: 2rem; margin-bottom: 30px;">Liste des Clients</h1>

        <!-- Tableau des clients -->
        <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Address</th>
                    <th>Contact Number</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td>{{ client.address }}</td>
                        <td>{{ client.contactNumber }}</td>
                        <td>{{ client.email }}</td>
                        <td>
                            <!-- Actions -->
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-info btn-sm" style="padding: 5px 10px; margin-right: 5px; text-decoration: none;">
                                Show
                            </a>
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning btn-sm" style="padding: 5px 10px; margin-right: 5px; text-decoration: none;">
                                Edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Bouton pour créer un nouveau client -->
        <div class="text-center mt-4">
            <a href="{{ path('app_client_new') }}" class="btn btn-primary" style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                Create New Client
            </a>
        </div>

    </div>

    {# Styles spécifiques à cette page #}
    <style>
        /* Style des boutons */
        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 14px;
            text-decoration: none;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
        }

        .btn-info:hover {
            background-color: #138496;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .table th, .table td {
            text-align: center;
            padding: 12px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table td {
            background-color: #ffffff;
        }

        .text-center {
            text-align: center;
        }
    </style>
{% endblock %}
