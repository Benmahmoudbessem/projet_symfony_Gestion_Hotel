{% extends 'base.html.twig' %}

{% block title %}Edit Hotel{% endblock %}

{% block body %}
    <!-- Fond g√©n√©ral -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centr√© et en rouge -->
        <h1 class="text-center text-primary mb-4" style="color: red;">Edit Hotel</h1>

        <!-- Formulaire de modification -->
        <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 800px; margin: auto;">
            <form method="post" action="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="form">

                <div class="mb-4">
                    <label for="hotel_nom" class="form-label" style="font-weight: bold;">Nom de l'H√¥tel</label>
                    <input type="text" id="hotel_nom" name="hotel[nom]" value="{{ hotel.nom }}" class="form-control" required>
                </div>

                <div class="mb-4">
                    <label for="hotel_nbChambre" class="form-label" style="font-weight: bold;">Nombre de Chambres</label>
                    <input type="number" id="hotel_nbChambre" name="hotel[nbChambre]" value="{{ hotel.nbChambre }}" class="form-control" required>
                </div>

                <div class="mb-4">
                    <label for="hotel_address" class="form-label" style="font-weight: bold;">Adresse</label>
                    <input type="text" id="hotel_address" name="hotel[address]" value="{{ hotel.address }}" class="form-control" required>
                </div>

                <!-- Bouton pour mettre √† jour -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success"
                            style="background-color: #28a745; color: white; padding: 10px 20px; border-radius: 5px;">
                        üìù Update
                    </button>
                </div>
            </form>
        </div>

        <!-- Espacement entre les boutons -->
        <div class="d-flex justify-content-between mt-4">
            <!-- Bouton retour √† la liste -->
            <a href="{{ path('app_hotel_index') }}" class="btn btn-primary"
               style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                ‚¨Ö Back to List
            </a>
        </div>

        <!-- Espacement entre les sections de boutons -->
        <div class="d-flex justify-content-center mt-4">
            <!-- Conteneur pour centrer le bouton Delete -->
            <form method="post" action="{{ path('app_hotel_delete', {'id': hotel.id}) }}" class="text-center">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.id) }}">
                <button class="btn btn-danger"
                        style="background-color: #dc3545; color: white; padding: 10px 20px; border-radius: 5px; border: none; font-size: 16px; cursor: pointer;">
                    ‚ùå Delete
                </button>
            </form>
        </div>

    </div>

    {# Ajout des styles CSS dans cette page #}
    <style>
        /* Centrer le titre en rouge */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
        }

        /* Structurer les champs du formulaire */
        .form {
            max-width: 800px;
            margin: auto;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;
            font-size: 14px;
        }

        .btn {
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            display: inline-block;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-success:hover {
            background-color: #218838;
        }

    </style>
{% endblock %}
