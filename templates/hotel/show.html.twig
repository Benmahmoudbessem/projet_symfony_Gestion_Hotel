{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center text-primary mb-4" style="color: red;">Hotel Details</h1>

        <!-- Table des détails de l'hôtel -->
        <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); max-width: 800px; margin: auto;">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ hotel.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ hotel.nom }}</td>
                </tr>
                <tr>
                    <th>NbChambre</th>
                    <td>{{ hotel.nbChambre }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ hotel.address }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Boutons supplémentaires -->
        <div class="text-center mt-4">
            <!-- Bouton retour à la liste -->
            <a href="{{ path('app_hotel_index') }}" class="btn btn-primary"
               style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                ⬅ Back to List
            </a>

            <!-- Bouton pour modifier l'hôtel -->
            <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-warning"
               style="background-color: #ffc107; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                ✏️ Edit
            </a>
        </div>

        <!-- Espacement entre les deux sections de boutons -->
        <div class="d-flex justify-content-center mt-4">
            <!-- Conteneur pour centrer le bouton Delete -->
            <form method="post" action="{{ path('app_hotel_delete', {'id': hotel.id}) }}" class="text-center">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hotel.id) }}">
                <button class="btn btn-danger"
                        style="background-color: #dc3545; color: white; padding: 10px 20px; border-radius: 5px; border: none; font-size: 16px; cursor: pointer;">
                    ❌ Delete
                </button>
            </form>
        </div>

    </div>

    {# Ajout des styles CSS dans cette page #}
    <style>
        /* Centrer le titre en rouge */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
        }

        /* Structurer la table des détails de l'hôtel */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        /* Boutons */
        .btn {
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            margin-right: 10px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-warning {
            background-color: #ffc107;
            color: white;
        }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

    </style>
{% endblock %}
