{% extends 'base.html.twig' %}

{% block title %}Modifier Personne{% endblock %}

{% block body %}
    <!-- Fond général -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px; border-radius: 10px;">

        <!-- Titre centré et en rouge -->
        <h1 class="text-center text-primary mb-4" style="color: red;">Modifier Personne</h1>

        <!-- Formulaire de modification -->
        <div class="form-container">
            {{ include('personne/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <!-- Boutons supplémentaires -->
        <div class="text-center mt-4">
            <!-- Bouton vert pistache pour retour à la liste -->
            <a href="{{ path('app_personne_index') }}"
               class="btn btn-success"
               style="background-color: #a2d9a6; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                ⬅ Retour à la liste
            </a>

            <!-- Bouton rouge pour supprimer -->
            <form method="post" action="{{ path('app_personne_delete', {'id': personne.id}) }}" style="display: inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ personne.id) }}">
                <button class="btn btn-danger"
                        style="background-color: #dc3545; color: white; padding: 10px 20px; border-radius: 5px; border: none;">
                    ❌ Supprimer
                </button>
            </form>
        </div>
    </div>

    {# Ajout des styles CSS dans cette page #}
    <style>
        /* Centrer le titre en rouge */
        h1 {
            text-align: center;
            color: red;
            font-size: 2rem;
        }

        /* Structurer le formulaire */
        .form-container {
            max-width: 600px; /* Limite la largeur du formulaire */
            margin: 0 auto; /* Centre le formulaire horizontalement */
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container .form-group {
            margin-bottom: 1.5rem; /* Espacement entre les champs */
        }

        .form-container label {
            font-weight: bold;
        }

        .form-container input,
        .form-container select,
        .form-container textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .form-container button {
            background-color: #007bff; /* Bleu */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1.2rem;
            width: 100%; /* Le bouton prend toute la largeur du formulaire */
        }

        .form-container button:hover {
            background-color: #0056b3; /* Bleu plus foncé au survol */
        }

        /* Bouton retour à la liste */
        .back-to-list-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
        }

        .back-to-list-btn:hover {
            background-color: #0056b3;
        }

    </style>
{% endblock %}
