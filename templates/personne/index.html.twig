{% extends 'base.html.twig' %}

{% block title %}Liste des Personnes{% endblock %}

{% block body %}
    <!-- Fond g√©n√©ral de la page -->
    <div style="background-color: #f0f8ff; min-height: 100vh; padding: 30px;">
        <h1 class="text-center text-primary mb-4">Liste des Personnes</h1>

        <!-- Style personnalis√© -->
        <style>
            .table-custom {
                width: 90%;
                margin: auto;
                background-color: #e6f7ff; /* Fond bleu clair */
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

            .table-custom th {
                background-color: #007bff; /* Bleu vif pour l'en-t√™te */
                color: white;
                text-align: center;
                font-size: 1.2rem;
            }

            .table-custom td {
                text-align: center;
                padding: 15px;
            }

            .btn-pistache {
                background-color: #98fb98;
                color: #ffffff;
                border: none;
                padding: 8px 12px;
                border-radius: 5px;
                font-weight: bold;
                cursor: pointer;
            }

            .btn-pistache:hover {
                background-color: #82e682;
            }
        </style>

        <!-- Tableau stylis√© -->
        <table class="table table-custom">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for personne in personnes %}
                <tr>
                    <td>{{ personne.id }}</td>
                    <td>{{ personne.nom }}</td>
                    <td>{{ personne.prenom }}</td>
                    <td>
                        <!-- Boutons pour les actions -->
                        <form method="get" action="{{ path('app_personne_show', {'id': personne.id}) }}" style="display: inline;">
                            <button type="submit" class="btn-pistache">üëÅ Voir</button>
                        </form>
                        <form method="get" action="{{ path('app_personne_edit', {'id': personne.id}) }}" style="display: inline;">
                            <button type="submit" class="btn-pistache">‚úè Modifier</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-danger">Aucun r√©sultat trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Bouton de cr√©ation centr√© -->
        <div class="text-center mt-4">
            <form method="get" action="{{ path('app_personne_new') }}">
                <button type="submit" class="btn-pistache btn-lg shadow">+ Cr√©er une nouvelle personne</button>
            </form>
        </div>
    </div>
{% endblock %}
