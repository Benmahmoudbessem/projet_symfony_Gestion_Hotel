{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center">Register</h1>

    <!-- Ajout de l'image avec styles pour centrage et redimensionnement -->
    <div class="image-container text-center">
        <img src="{{ asset('images/oo.webp') }}" alt="Register Banner" class="img-fluid centered-image">
    </div>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'form-container'}}) }}
    <div class="form-group">
        {{ form_label(registrationForm.email, 'Email Address', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.plainPassword, 'Password', {'attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="form-group">
        <div class="form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', {'attr': {'class': 'form-check-label'}}) }}
        </div>
        {{ form_errors(registrationForm.agreeTerms) }}
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

    <style>
        /* Conteneur du formulaire */
        .form-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Conteneur de l'image */
        .image-container {
            margin-bottom: 20px;
            text-align: center;
        }

        /* Image centrée et redimensionnée */
        .centered-image {
            width: 150px; /* Ajustez cette taille selon vos besoins */
            height: auto; /* Conserve le ratio d'aspect */
            display: inline-block;
            border-radius: 8px; /* Optionnel : coins arrondis */
        }

        /* Style des groupes de champs */
        .form-group {
            margin-bottom: 20px;
        }

        /* Style des labels */
        .form-label {
            font-weight: bold;
            font-size: 1rem;
            color: #4a4a4a;
            display: block;
            margin-bottom: 8px;
            transition: color 0.3s;
        }

        .form-label:hover {
            color: #007bff;
        }

        /* Style des champs de saisie */
        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #fff;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 4px rgba(0, 123, 255, 0.5);
        }

        /* Style des boutons */
        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        /* Style des cases à cocher */
        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 10px;
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .form-check-label {
            font-size: 1rem;
            color: #555;
            cursor: pointer;
        }

        .form-check-label:hover {
            color: #007bff;
        }

    </style>
{% endblock %}
