{% extends 'base.html.twig' %}

{% block title %}Edit Reservation{% endblock %}

{% block body %}
    <h1 class="page-title">Edit Reservation</h1>

    <div class="form-container">
        {{ include('reservation/_form.html.twig', {'button_label': 'Update'}) }}
    </div>

    <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Back to list</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}

{% block stylesheets %}
    <style>
        /* Conteneur du formulaire */
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Titre de la page */
        .page-title {
            text-align: center;
            color: #007bff; /* Couleur bleue */
            font-size: 2rem;
            margin-bottom: 20px;
        }

        /* Groupement des éléments du formulaire */
        .form-group {
            margin-bottom: 20px; /* Espacement entre les éléments */
        }

        /* Style des labels */
        .form-label {
            font-weight: bold;
            font-size: 1.3rem; /* Taille du texte du label */
            display: block;
            margin-bottom: 15px; /* Espace sous le label */
            padding-left: 10px; /* Décalage à gauche pour un meilleur alignement */
        }

        /* Couleur et style des labels spécifiques */
        .form-label.name-label {
            color: #007bff; /* Bleu pour le nom */
        }

        .form-label.date-label {
            color: #28a745; /* Vert pour la date */
        }

        .form-label.price-label {
            color: #ffc107; /* Jaune pour le prix */
        }

        .form-label.status-label {
            color: #dc3545; /* Rouge pour le statut */
        }

        /* Espacement des champs de saisie */
        .form-control {
            width: 100%;
            padding: 12px; /* Espacement interne des champs */
            margin-top: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        /* Boutons */
        .btn {
            padding: 10px 15px;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        /* Effet de survol des boutons */
        .btn:hover {
            opacity: 0.8;
        }

        /* Lien de retour */
        .btn-secondary {
            margin-top: 20px;
            display: inline-block;
        }
    </style>
{% endblock %}
